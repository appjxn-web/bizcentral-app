
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for most files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to their own avatar path
    match /avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to write to the offers path
    match /offers/{fileName} {
        allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write post media
    match /posts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback for any other write operations - restricted by default
    match /{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
